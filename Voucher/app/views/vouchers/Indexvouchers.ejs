<!DOCTYPE html>
<html lang="pt-br" dir="ltr">

<head>

  <meta charset="utf-8">
  <meta name="description" content="Voucher Singu">
  <meta name="author" content="@lulumeisterr">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content="moda, beleza , singu , manicure, massagista"/>
  <meta http-equiv="cache-control" content="no-cache" />

  <!-- CSS -->

  <link rel="stylesheet" type="text/css" href="/assets/css/voucher.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/modal.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/formulario.css">


  <title>Voucher</title>
</head>
<body>

  <div class="container">

    <header class="menu"></header>
    <h1> Vouchers </h1><hr class="line">

    <br>

    <main id="borda">
      
      <p> Filters Results </p>

      <table class="table">
        <tr>
          <th>Código</th>
          <th>Campanha</th>
          <th>Inicio</th>
          <th>Fim</th>
          <th>Max</th>
          <th>Qtde utilizada</th>
          <th>Valor</th>
        </tr>

        <%for(var i=0;i<lista.length;i++) {%>
        <tr>
          <td><%=lista[i].codigo%></td>
          <td><%=lista[i].campanha%></td>
          <td><%=lista[i].inicio%></td>
          <td><%=lista[i].fim%></td>
          <td><%=lista[i].max%></td>
          <td><%=lista[i].qtdUtilizada%></td>
          <td><%=lista[i].valor%></td>
        </tr>

        <%}%>

      </table>

          <td> <input  id="modalBtn" type="submit" name="botao" value="Cadastrar"/> </td>
          

          <div id="simpleModal" class="modal">
            <div class="modal-content">
              <span class="fecharBtn">&times;</span>

              <div class="formulario">
                <h1 id="p">Editar Voucher</h1>

                <form action="/vouchers" method="post">

                  <div class="bloco1">
                    <label id="move1" for="tCodigo"> CÓDIGO </label>
                    <input type="text" name="codigo" id="tCodigo" placeholder="lari100">
                  </div>

                  <div class="bloco2">
                    <label id="move2" for="tValor"> VALOR </label>
                    <input type="text" name="valor" id="tValor" placeholder="RS$ 20,00">
                  </div>

                  <div class="bloco3">
                    <label id="move3" for="tCampanha"> CAMPANHA </label>
                    <input type="text" name="campanha" id="tCampanha" placeholder="lariduartepedidos">
                  </div>


                  <div class="bloco4">
                    <label id="move4" for="tInicio"> INICIO </label>
                    <input type="text" name="inicio" id="tInicio" placeholder="06/06/2017">
                  </div>

                  <div class="bloco5">
                    <label id="move5" for="tFim"> FIM </label>
                    <input type="text" name="fim" id="tFim" placeholder="06/06/2019">
                  </div>


                  <div class="bloco6">
                    <label id="move6" for="tMax"> MAX </label>
                    <input type="text" name="max" id="tMax" placeholder="lari100">
                  </div>

                  <div class="bloco7">
                  <label id="move7" for="tQtd">QTDE UTILIZADA</label>
                  <input type="text" name="qtdUtilizada" id="tQtd" placeholder="10"> 
                  </div>

                  <div class="borderpurple">
                    
                    <div class="btCancelar">
                    <button id="cancel">Cancelar</button>  
                    </div>
                    
                    <div class="btSalvar">
                    <input type="submit" id="save" value="Salvar e enviar"/>
                    </div>
                  
                  </div>

                </form>

              </div>

            </div>
          </div>
        </tr>
  
    </main>

  </div>


  <!-- JavaScript -->

  <script src="/assets/js/modal.js"></script>

</body>
</html>
